{
  "name": "trpg-ai-gm-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:vercel": "pnpm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:evidence": "playwright test e2e/pages/writing-evidence-simplified.spec.ts --reporter=line",
    "test:evidence:headed": "playwright test e2e/pages/writing-evidence-simplified.spec.ts --headed --reporter=line",
    "test:evidence:full": "playwright test e2e/pages/writing-functionality-evidence.spec.ts --reporter=line",
    "test:regression": "playwright test e2e/pages/writing-evidence-simplified.spec.ts --grep=\"回帰テスト\" --reporter=line",
    "test:timeline:ai": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts --reporter=line",
    "test:timeline:ai:headed": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts --headed --reporter=line",
    "test:worldbuilding:ai": "playwright test e2e/pages/world-building-page-ai-enhanced.spec.ts --reporter=line",
    "test:worldbuilding:ai:headed": "playwright test e2e/pages/world-building-page-ai-enhanced.spec.ts --headed --reporter=line",
    "test:ai-enhanced": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts e2e/pages/world-building-page-ai-enhanced.spec.ts --reporter=line",
    "test:ai-enhanced:headed": "playwright test e2e/pages/timeline-page-ai-enhanced.spec.ts e2e/pages/world-building-page-ai-enhanced.spec.ts --headed --reporter=line",
    "test:accessibility": "playwright test e2e/accessibility/ --reporter=line",
    "test:accessibility:headed": "playwright test e2e/accessibility/ --headed --reporter=line",
    "test:a11y": "playwright test e2e/accessibility/ --reporter=line",
    "test:trpg-core": "playwright test --project=trpg-desktop e2e/trpg-core/ --reporter=line",
    "test:trpg-core:headed": "playwright test --project=trpg-desktop e2e/trpg-core/ --headed --reporter=line",
    "test:trpg-session": "playwright test --project=trpg-session e2e/trpg-session/ --reporter=line",
    "test:trpg-session:headed": "playwright test --project=trpg-session e2e/trpg-session/ --headed --reporter=line",
    "test:trpg-mobile": "playwright test --project=trpg-mobile e2e/mobile/ --reporter=line",
    "test:trpg-mobile:headed": "playwright test --project=trpg-mobile e2e/mobile/ --headed --reporter=line",
    "test:trpg-performance": "playwright test --project=trpg-performance e2e/performance/ --reporter=line",
    "test:trpg-performance:headed": "playwright test --project=trpg-performance e2e/performance/ --headed --reporter=line",
    "test:trpg-comprehensive": "playwright test --project=trpg-desktop --project=trpg-session e2e/trpg-core/ e2e/trpg-session/ --reporter=line",
    "test:trpg-all": "playwright test --project=trpg-desktop --project=trpg-session --project=trpg-performance --project=trpg-mobile --reporter=html",
    "test:trpg-campaign": "playwright test e2e/trpg-core/campaign-management.spec.ts --reporter=line",
    "test:trpg-characters": "playwright test e2e/trpg-core/character-management.spec.ts --reporter=line",
    "test:trpg-world": "playwright test e2e/trpg-core/world-building.spec.ts --reporter=line",
    "test:trpg-smoke": "playwright test e2e/trpg-core/campaign-management.spec.ts e2e/trpg-core/character-management.spec.ts --grep=\"should create\" --reporter=line",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/noto-sans-jp": "^5.2.5",
    "@fontsource/noto-serif-jp": "^5.2.5",
    "@mui/icons-material": "^7.0.2",
    "@mui/lab": "^5.0.0-alpha.176",
    "@mui/material": "^7.0.2",
    "@mui/x-charts": "^8.0.0",
    "@react-three/drei": "^10.1.2",
    "@react-three/fiber": "^9.1.2",
    "@trpg-ai-gm/types": "file:../../packages/types",
    "@types/slate": "^0.47.16",
    "@types/slate-react": "^0.50.0",
    "@types/three": "^0.177.0",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "dice-typescript": "^1.0.0",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.508.0",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-calendar-timeline": "^0.30.0-beta.3",
    "react-contenteditable": "^3.3.7",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.5.0",
    "react-simple-maps": "^3.0.0",
    "recoil": "^0.7.7",
    "slate": "^0.112.0",
    "slate-dom": "^0.112.2",
    "slate-history": "^0.113.1",
    "slate-react": "^0.112.1",
    "socket.io-client": "^4.7.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "three": "^0.177.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^6.4.0",
    "@types/react": "^18.2.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "axe-core": "^4.10.2",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "storybook": "^8.6.12",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vitest": "^3.1.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
