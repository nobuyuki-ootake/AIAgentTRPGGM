{
  "mcpServers": {
    "playwright": {
      "command": "/home/irure/.nvm/versions/node/v18.20.8/bin/npx",
      "args": ["-y", "@playwright/mcp"],
      "env": {
        "PLAYWRIGHT_HEADLESS": "false",
        "PLAYWRIGHT_WS_ENDPOINT": "ws://localhost:55431",
        "BROWSER_WS_ENDPOINT": "ws://localhost:55431"
      }
    },
    "mastra-docs": {
      "url": "https://gitmcp.io/mastra-ai/mastra/"
    },
    "taskmaster-ai": {
      "command": "/home/irure/.nvm/versions/node/v18.20.8/bin/npx",
      "args": ["-y", "--package=task-master-ai", "task-master-ai"],
      "env": {
        "ANTHROPIC_API_KEY": "YOUR_ANTHROPIC_API_KEY_HERE",
        "PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY_HERE",
        "OPENAI_API_KEY": "YOUR_OPENAI_KEY_HERE",
        "GOOGLE_API_KEY": "YOUR_GOOGLE_KEY_HERE",
        "MISTRAL_API_KEY": "YOUR_MISTRAL_KEY_HERE",
        "OPENROUTER_API_KEY": "YOUR_OPENROUTER_KEY_HERE",
        "XAI_API_KEY": "YOUR_XAI_KEY_HERE",
        "AZURE_OPENAI_API_KEY": "YOUR_AZURE_KEY_HERE"
      },
      "type": "stdio"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "env": {}
    },
    "playwright-custom": {
      "command": "bash",
      "args": [
        "-c",
        "cd /mnt/c/Users/irure/git/AIAgentTRPGGM/apps/frontend && npx playwright test --reporter=json"
      ],
      "env": {
        "PLAYWRIGHT_HEADLESS": "true"
      }
    },
    "browsermcp": {
      "command": "npx",
      "args": ["@browsermcp/mcp@latest"]
    }
  }
}
